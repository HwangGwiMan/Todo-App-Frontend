{
  "name": "todoapp-frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "type-check": "vue-tsc --noEmit",
    "generate:api": "openapi -i http://localhost:8080/api-docs -o src/api -c axios",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "chart.js": "^4.5.1",
    "date-fns": "^4.1.0",
    "pinia": "^2.1.7",
    "vue": "^3.4.0",
    "vue-chartjs": "^5.3.3",
    "vue-router": "^4.2.5",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@hey-api/openapi-ts": "0.90.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.16",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "^10.6.0",
    "globals": "^16.5.0",
    "jsdom": "^27.4.0",
    "openapi-typescript-codegen": "^0.30.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.3.0",
    "vite": "^7.2.7",
    "vitest": "^4.0.16",
    "vue-tsc": "^3.2.1"
  }
}
